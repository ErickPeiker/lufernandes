<!DOCTYPE html>
<html lang="pt">
	<head>
		<meta charset="UTF-8">
		<title>A vida Ã© um doce</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />

		<link rel="stylesheet" href="css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/bootstrap-modal-carousel.min.css" />

	</head>
	<body class="landing" ng-app="app">

		<section id="banner" ng-controller="banner">
			<h2 class="customfont" ng-bind-html="'<%=config.nome%>' | to_trusted"></h2>
			<h3 ng-bind-html="'<%=config.titulo%>' | to_trusted" ></h3>
			<p ng-bind-html="'<%=config.celular%>' | to_trusted" ></p>
			<p></p>
		</section>

		<!-- One -->
		<section id="one" class="wrapper style1 special">
			<div class="container">
				<header class="major">
					<h2 class="customfont" ng-bind-html="'<%=config.grupos%>' | to_trusted"></h2>
				</header>
				<div class="row 150%">
					<% for (index in grupos) { %>
						<div class="4u 12u$(medium)">
							<section class="box" data-toggle="modal" data-target="#myModal" data-local="#myCarousel">
								<p><%=grupos[index].nome%></p>
								<img class="icon big rounded img1"></img>
							</section>
						</div>
					<% } %>
				</div>
			</div>
		</section>

		<!-- Three -->
		<section id="three" class="wrapper style3 special">
			<div class="container">
				<header class="major">
					<h2 class="customfont" ng-bind-html="'<%=config.contato%>' | to_trusted"></h2>
				</header>
			</div>
			<div class="container 50%">
				<form action="#" method="post">
					<div class="row uniform">
						<div class="6u 12u$(small)">
							<input name="name" id="name" value="" placeholder="Nome" type="text">
						</div>
						<div class="6u$ 12u$(small)">
							<input name="phone" id="phone" value="" placeholder="Telefone" type="phone">
						</div>
						<div class="12u$">
							<input name="email" id="email" value="" placeholder="E-mail" type="email">
						</div>
						<div class="12u$">
							<textarea name="message" id="message" placeholder="Mensagem" rows="6"></textarea>
						</div>
						<div class="12u$">
							<ul class="actions">
								<li><input value="Enviar" class="special big" type="submit"></li>
							</ul>
						</div>
					</div>
				</form>
			</div>
		</section>

		<section class="modal-imagens">
			<div id="myCarousel" class="carousel slide carousel-fit" data-ride="carousel">
				<ol class="carousel-indicators">
					<% for (index in imagens) { %>
					    <li data-target="#myCarousel" data-slide-to="<%=index%>" class="<%if(index==0){%>active<%}%>"></li>
					<% } %>
				</ol>

				<!-- 
				https://noreiller.github.io/bootstrap-modal-carousel/index.html
				-->
				<!-- Wrapper for slides -->
				<div class="carousel-inner">
					<% for (index in imagens) { %>
						<div class="item <%if(index==0){%>active<%}%>">
							<div class="carousel-caption">
								<h3><%=imagens[index].nome%> - <%=imagens[index].preco%></h3>
							</div>
							<img src="<%=imagens[index].caminho%>" alt="<%=imagens[index].nome%>"/>
						</div>
					<% } %>
				</div>

				  <!-- Controls -->
				<a class="left carousel-control" href="#myCarousel" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
				</a>
				<a class="right carousel-control" href="#myCarousel" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
				</a>
			</div>

			<div class="modal fade modal-fullscreen force-fullscreen" 
					id="myModal" 
					tabindex="-1" 
					role="dialog" 
					aria-labelledby="myModalLabel" 
					aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
							<h4 class="modal-title">ENCONTRE O QUE FALTA PARA SUA FESTA AQUI!</h4>
						</div>
						<div class="modal-body">
						</div>
						<div class="modal-footer">
						</div>
					</div>
				</div>
			</div>
		</section>

	</body>
	<!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/angular.min.js"></script>
	<script src="js/skel.min.js"></script>
	<script src="js/skel-layers.min.js"></script>
	<script src="js/init.js"></script>
	<script src="js/bootstrap-modal-carousel.min.js"></script>
	<script src="index.js"></script>
</html>