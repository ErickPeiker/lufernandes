<!DOCTYPE html>
<html lang="pt" ng-app="app">
	<head>
		<meta charset="UTF-8">
		<title>Lu Fernandes</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />

		<link rel="stylesheet" href="css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/bootstrap-modal-carousel.min.css" />

	</head>
	<body class="landing" ng-controller="index" ng-init="init()">

		<section id="banner">
			<h2 class="destaque-principal customfont" ng-bind="config.nome"></h2>
			<h3 ng-bind="config.titulo"></h3>
			<p ng-bind="config.celular"></p>
			<p></p>
		</section>

		<!-- One -->
		<section id="one" class="wrapper style1 special">
			<div class="container">
				<header class="major">
					<h2 class="customfont" ng-bind="config.grupos"></h2>
				</header>
				<div class="row 150%">
					<div class="4u 12u$(medium)" ng-repeat="grp in grupos | orderBy: ['ordem', 'nome']">
						<section class="box" data-toggle="modal" data-target="#myModal" data-local="#myCarousel" ng-click="filtraImagens(grp.id)">
							<p class="grupos" ng-bind="grp.nome"></p>
							<img class="icon big rounded img1" ng-src="{{getImagemPrincipal(grp.id) }}"/>
						</section>
					</div>
				</div>
			</div>
		</section>

		<!-- Three -->
		<section id="three" class="wrapper style3 special">
			<div class="container">
				<header class="major">
					<h2 class="customfont" ng-bind="config.contato"></h2>
				</header>
			</div>
			<div class="container 50%">
				<form action="#" method="post">
					<div class="row uniform">
						<div class="6u 12u$(small)">
							<input name="name" id="name" ng-model="email.nome" value="" placeholder="Nome" type="text">
						</div>
						<div class="6u$ 12u$(small)">
							<input name="phone" id="phone" ng-model="email.phone" value="" placeholder="Telefone" type="phone">
						</div>
						<div class="12u$">
							<input name="email" id="email" ng-model="email.email" value="" placeholder="E-mail" type="email">
						</div>
						<div class="12u$">
							<textarea name="message" id="message" ng-model="email.message" placeholder="Mensagem" rows="6"></textarea>
						</div>
						<div class="12u$">
							<ul class="actions">
								<li><input id="enviaContato" value="Enviar" class="button special big" ng-click="enviaEmail()"/></li>
							</ul>
						</div>
					</div>
				</form>
			</div>
		</section>

		<section class="modal-imagens">
			<div id="myCarousel" class="carousel slide carousel-fit" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#myCarousel"
						ng-repeat="img in imagensFiltradas track by $index" 
						data-slide-to="$index" 
						ng-class="{'active': $index == 0}"></li>
				</ol>

				<div class="carousel-inner">
					<div ng-repeat="img in imagensFiltradas" ng-class="{'item': 1==1, 'active': $index == 0}">
						<div class="carousel-caption">
							<h3 class="titulo-imagem" ng-bind="img.nome"></h3>
						</div>
						<img ng-src="{{config.url}}{{img.file}}" ng-alt="img.nome"/>
					</div>
				</div>


				  <!-- Controls -->
				<a class="left carousel-control" href="#myCarousel" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
				</a>
				<a class="right carousel-control" href="#myCarousel" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
				</a>
			</div>

			<div class="modal fade modal-fullscreen force-fullscreen" 
					id="myModal" 
					tabindex="-1" 
					role="dialog" 
					aria-labelledby="myModalLabel" 
					aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
							<h4 class="modal-title" ng-bind="config.topo_imagens"></h4>
						</div>
						<div class="modal-body">
						</div>
					</div>
				</div>
			</div>
		</section>

	</body>
	<!--[if lte IE 8]><script src="js/html5shiv.js"></script><![endif]-->
	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/angular.min.js"></script>
	<script src="js/skel.min.js"></script>
	<script src="js/skel-layers.min.js"></script>
	<script src="js/init.js"></script>
	<script src="js/bootstrap-modal-carousel.min.js"></script>
	<script src="index.js"></script>
</html>